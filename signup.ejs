<%- include("partials/header", { title: "Signup", user: null }) %>
<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card p-4 mt-4">
      <h3 class="text-center mb-3">Sign Up</h3>
      <% if (error) { %><div class="alert alert-danger"><%= error %></div><% } %>
      <form method="POST" action="/signup">
        <div class="mb-3"><label>Username</label><input class="form-control" name="username" required></div>
        <div class="mb-3"><label>Email</label><input class="form-control" name="email" required></div>
        <div class="mb-3"><label>Password</label><input class="form-control" type="password" name="password" required></div>
        <div class="mb-3">
          <label>Role</label>
          <select class="form-select" name="role" required>
            <option value="student">Student</option>
            <option value="faculty">Faculty</option>
            <option value="admin">Admin</option>
          </select>
        </div>
        <button class="btn btn-success w-100">Sign Up</button>
      </form>
      <p class="text-center mt-3">Already have an account? <a href="/login">Login</a></p>
    </div>
  </div>
</div>
<%- include("partials/footer") %>
